<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ru.radzze.curvedbottomnav.MeowBottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mbn_circleColor="#FFFCE181"
        app:mbn_backgroundBottomColor="#FFEFEBDE"
        app:mbn_countBackgroundColor="#ff6f00"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="#000000"
        app:mbn_rippleColor="#2FFFFFFF"
        app:mbn_selectedIconColor="#000000"
        app:mbn_shadowColor="#0000FF04"
        app:mbn_titleTextColor ="#000000"
        />

</RelativeLayout>
